# Application
NODE_ENV=development
PORT=5000
APP_NAME=Darb Crowdfunding
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=darb_crowdfunding
DB_PORT=3306

# Authentication
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
SALT_ROUNDS=10

# Upload Limits (in MB)
MAX_IMAGE_SIZE=5
MAX_DOCUMENT_SIZE=10
MAX_VIDEO_SIZE=50

# Email Configuration
EMAIL_FROM=noreply@darbng.com
EMAIL_FROM_NAME=Darb Crowdfunding
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_SECURE=false

# Payment Gateway - Paystack
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxx

# Payment Gateway - Flutterwave (Optional)
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxx
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Security
CORS_ORIGINS=http://localhost:3000,https://darbng.com
ENABLE_RATE_LIMIT=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100